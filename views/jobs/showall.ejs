<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/header.ejs') %>

    <body>
        <table class="showall">
            <tr>
                <th>Active</th>
                <th>Job Name</th>
                <th>Job Number</th>
                <th>Total Weight</th>
            </tr>
            <% for (job of jobs) { %> 
                <% let totalWeight=job.dl.weight.galv + job.dl.weight.ss + job.dl.weight.blackIron + job.dl.weight.pl + job.dl.weight.alum %> 
            <tr>
              <td><%= job.dl.active ? "Active" : "Not Active" %></td>
              <td><a href="/jobs/<%= job._id %> "><%=  job.name %> </a></td>
              <td><%= job.number %> </td>
              <td><%= totalWeight %> </td>
            </tr>
            <% } %> 
        </table>
    </body>